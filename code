clc
close all
clear all
input1=fopen('eq.dat','r'); % opening the data file
in=fscanf(input1,'%f');
fclose(input1);
s=linspace(1,47,47); %creating the sampling interval
figure(1);
plot(s,in,'linewidth',2); %plotting the Earthquake continuous signal
set(gca,'fontsize',13,'fontweight','bold');
title('Earthquake Signal','fontsize',13,'fontweight','bold');
xlabel('Samples','fontsize',13,'fontweight','bold');
ylabel('Magnitude','fontsize',13,'fontweight','bold');
% SAMPLING
figure(2);
hold on;
stem(in);     % plot of sampled signal
title('SAMPLED SIGNAL');
xlabel('SAMPLES');
ylabel('MAGNITUDE');
hold off;
% QUANTIZATION
n1=3;
L=2^n1;
xmax=6;
xmin=3;
del=(xmax-xmin)/L;
partition=xmin:del:xmax;            % definition of decision lines
codebook=xmin-(del/2):del:xmax+(del/2);    % definition of representation levels
[index,quants]=quantiz(in,partition,codebook);    
% gives rounded off values of the samples
figure(3);
hold on;
stem(quants);
title('QUANTIZED SIGNAL');
xlabel('SAMPLES');
ylabel('MAGNITUDE');
hold off;
% NORMALIZATION
l1=length(index);                 % to convert 1 to n as 0 to n-1 indicies
for i=1:l1
    if (index(i)~=0)
        index(i)=index(i)-1;
    end
end
l2=length(quants);
for i=1:l2          %  to converet the end representation levels within the range.
    if(quants(i)==xmin-(del/2))
        quants(i)=xmin+(del/2);
    end
    if(quants(i)==xmax+(del/2))
        quants(i)=xmax-(del/2);
    end
end
%  ENCODING
code=de2bi(index,'left-msb')    % DECIMAL TO BINANRY CONV OF INDICIES
k=1;
for i=1:l1 % to convert column vector to row vector
for j=1:n1
coded(k)=code(i,j);
j=j+1;
k=k+1;
end
i=i+1;
end
% DECODING
code1=reshape(coded,n1,(length(coded)/n1));
index1=bi2de(code1,'left-msb');
resignal=del*index+xmin+(del/2);
figure(5);
hold on;
plot(resignal);
title('RECREATING SIGNAL');
xlabel('SAMPLES');
ylabel('MAGNITUDE');
hold off;
